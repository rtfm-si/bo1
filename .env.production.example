# Board of One - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_USER=boardofone
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=boardofone
DATABASE_URL=postgresql://boardofone:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/boardofone

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://redis:6379

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Get from: https://www.voyageai.com/
VOYAGE_API_KEY=your-voyage-key-here

# ============================================================================
# ADMIN
# ============================================================================
# Generate strong random key: openssl rand -base64 32
ADMIN_API_KEY=CHANGE_ME_ADMIN_KEY_HERE
ADMIN_USER_ID=admin

# ============================================================================
# AUTHENTICATION (Disabled for MVP v1.0)
# ============================================================================
ENABLE_SUPABASE_AUTH=false

# Self-hosted Supabase (for future use)
SUPABASE_URL=http://supabase-auth:9999
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# OAuth (for future use)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
LINKEDIN_OAUTH_CLIENT_ID=
LINKEDIN_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=

# ============================================================================
# CORS
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://boardofone.com,https://www.boardofone.com

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true

# ============================================================================
# DOCKER IMAGES (Set by GitHub Actions)
# ============================================================================
# Replace 'yourusername' with your GitHub username
API_IMAGE=ghcr.io/yourusername/bo1/api:production-latest
FRONTEND_IMAGE=ghcr.io/yourusername/bo1/frontend:production-latest

# ============================================================================
# FRONTEND
# ============================================================================
PUBLIC_API_URL=https://boardofone.com

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=info

# ntfy.sh topic for alerts (optional)
NTFY_TOPIC=boardofone-alerts

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features without redeployment
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true

# ============================================================================
# PERFORMANCE
# ============================================================================
# Number of Uvicorn workers (recommended: 2-4 per CPU core)
UVICORN_WORKERS=4

# Database connection pool size
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis connection pool size
REDIS_POOL_SIZE=10

# ============================================================================
# BACKUPS
# ============================================================================
# S3 bucket for off-site backups (optional)
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_REGION=us-east-1
