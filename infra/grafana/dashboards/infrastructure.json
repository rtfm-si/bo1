{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "row",
      "title": "Service Health",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "API Status",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "up{job=\"bo1-api\"}", "refId": "A" }],
      "fieldConfig": { "defaults": { "mappings": [{ "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }] } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Redis Status",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "up{job=\"redis\"} or vector(1)", "refId": "A" }],
      "fieldConfig": { "defaults": { "mappings": [{ "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }] } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "PostgreSQL Status",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "up{job=\"postgres\"} or vector(1)", "refId": "A" }],
      "fieldConfig": { "defaults": { "mappings": [{ "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }] } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Prometheus Status",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "up{job=\"prometheus\"}", "refId": "A" }],
      "fieldConfig": { "defaults": { "mappings": [{ "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }] } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "row",
      "title": "Container Resources",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "container_memory_usage_bytes{name=~\"bo1.*\"} / 1024 / 1024", "legendFormat": "{{name}}", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "decmbytes", "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 } } }
    },
    {
      "type": "timeseries",
      "title": "Container CPU Usage",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "rate(container_cpu_usage_seconds_total{name=~\"bo1.*\"}[5m]) * 100", "legendFormat": "{{name}}", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "percent", "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 } } }
    },
    {
      "type": "row",
      "title": "Redis Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Redis Memory",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "redis_memory_used_bytes / 1024 / 1024 or vector(0)", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "decmbytes" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Redis Connections",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "redis_connected_clients or vector(0)", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Redis Keys",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "sum(redis_db_keys) or vector(0)", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "Redis Hit Rate",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100 or vector(0)", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "percent", "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "orange", "value": 80 }, { "color": "green", "value": 95 }] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "row",
      "title": "PostgreSQL Metrics",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 19 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "PG Active Connections",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "pg_stat_activity_count{state=\"active\"} or vector(0)", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "stat",
      "title": "PG Total Connections",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "sum(pg_stat_activity_count) or vector(0)", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "PostgreSQL Connections Over Time",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        { "expr": "pg_stat_activity_count{state=\"active\"} or vector(0)", "legendFormat": "Active", "refId": "A" },
        { "expr": "pg_stat_activity_count{state=\"idle\"} or vector(0)", "legendFormat": "Idle", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10, "stacking": { "mode": "normal" } } } }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["infrastructure", "redis", "postgres"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Infrastructure Dashboard",
  "uid": "bo1-infrastructure",
  "version": 1
}
